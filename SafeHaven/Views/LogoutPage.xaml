<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SafeHaven.Views.LogoutPage">
	<StackLayout Spacing="20" Padding="20" VerticalOptions="Center">
        <Label Text="Logout?" FontFamily="Futura-Medium" HorizontalTextAlignment="Center" FontSize="26" TextColor="#84000f" />
        <StackLayout Orientation="Horizontal" Padding="0, 10, 0, 0">
            <Button Text="Yes" BackgroundColor="{StaticResource Primary}" TextColor="White" HorizontalOptions="FillAndExpand" FontSize="Medium" Clicked="Logout" />
            <Button Text="No" BackgroundColor="{StaticResource Primary}" TextColor="White" HorizontalOptions="FillAndExpand" FontSize="Medium" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>
