<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SafeHaven.Views.NewPhotoTest">
	<StackLayout Padding="20, 40, 20, 40" Spacing="5" VerticalOptions="StartAndExpand">
        <StackLayout Padding="0, 10, 0, 10" BackgroundColor="{StaticResource PrimaryDark}">
            <Label Text="New Photo" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" FontSize="Large" TextColor="White" />
        </StackLayout>
        <StackLayout Spacing="10" Padding="10">
            <Button x:Name="takePhoto" Text="Take Photo" BackgroundColor="{StaticResource Primary}" TextColor="White" HorizontalOptions="FillAndExpand" FontSize="Medium"/>
            <Label x:Name="imagepath" VerticalOptions="FillAndExpand" />
        </StackLayout>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Button Text="Cancel" BackgroundColor="{StaticResource Primary}" TextColor="White" HorizontalOptions="FillAndExpand" FontSize="Medium" Clicked="Cancel" />
            <Button Text="Save" BackgroundColor="{StaticResource Primary}" TextColor="White" HorizontalOptions="FillAndExpand" FontSize="Medium" Clicked="Save" />
        </StackLayout>
    </StackLayout>
</ContentPage>
